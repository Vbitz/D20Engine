{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "baseUrl": "./src",
    "allowJs": true,
    "declaration": false
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "src/*.js",
    "src/**/*.js",
    "test/*.ts",
    "test/**/*.ts"
  ]
}
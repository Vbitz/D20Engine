{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "baseUrl": "./src",
    "allowJs": true,
    "declaration": false,
    "target": "es2017",
    "lib": [
      "dom",
      "es2017"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ],
    "esModuleInterop": true
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "src/*.js",
    "src/**/*.js",
    "test/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "src/frontend/**/*"
  ]
}
{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "baseUrl": "./src",
    "allowJs": true,
    "declaration": false,
    "target": "es2015",
    "lib": [
      "es2015"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "src/*.js",
    "src/**/*.js",
    "test/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}